{
  "name": "taskflow",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@9.9.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "commit": "git-cz",
    "commit:retry": "git commit --amend --no-edit",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky",
    "test": "turbo run test",
    "type-check": "turbo run type-check"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.12.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
